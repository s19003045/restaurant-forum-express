<h1>餐廳後台</h1>
<div class="mb-3">
  <a href='/admin/restaurants/create' class="btn btn-warning mr-3">
    <i class="fas fa-plus mr-1"></i>New Restaurant
  </a>
</div>
<div class="mb-3">
  <a href='/admin/restaurants' class="btn btn-link disabled">restaurants
  </a>
  <span>|</span>
  <a href='/admin/users' class="btn btn-link">Users
  </a>
  <span>|</span>
  <a href='/admin/categories' class="btn btn-link">categories
  </a>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category</th>
      <th scope="col">Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <th scope="row">{{this.Category.name}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/restaurants/{{this.id}}">
            Show
          </a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="/admin/restaurants/{{this.id}}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>