<div class="row mt-5">
  <div class="col col-md-4">
    <div class="avatar">
      <img class="img-responsive center-block" src="{{userProfile.image}}" style="width: 250px;margin-bottom: 25px;">

    </div>
  </div>
  <div class="col col-md-8">
    <div class="well">
      <ul class="list-unstyled">
        <li class="my-2"><strong class="mr-3">Name:</strong>{{userProfile.name}}</li>
        <li class="my-2"><strong class="mr-3">Email:{{userProfile.email}}</strong></li>
        <li class="my-2"><strong class="mr-3"></strong></li>

        {{#ifCond loginUserId userProfile.id}}
        <a href="/users/{{userProfile.id}}/edit" class="mt-3 btn btn-info">Edit</a>
        {{/ifCond}}

      </ul>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-lg-5">
    <h5><span class="mr-2">{{userProfile.CommentsRestaurants.length}}</span>已評論餐廳</h5>
    <br>
    {{#each userProfile.CommentsRestaurants}}
    <div class="mr-2">
      <a href="/restaurants/{{this.id}}">
        <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
      </a>
    </div>
    {{/each}}

  </div>
  <div class="col-lg-5">
    <h5><span class="mr-2">{{userProfile.FavoritedRestaurants.length}}</span>收藏的餐廳</h5>
    <br>
    {{#each userProfile.FavoritedRestaurants}}
    <div class="mr-2">
      <a href="/restaurants/{{this.id}}">
        <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
      </a>
    </div>
    {{/each}}
  </div>
</div>

<br>
<hr>
<br>
<div class="row">
  <div class="col-lg-5">
    <h5><span class="mr-2">{{userProfile.Followers.length}}</span> Followers</h5>

    <br>
    {{#each userProfile.Followers}}
    <div class="mr-2">
      <a href="/users/{{this.id}}">
        <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
      </a>
    </div>
    {{/each}}
  </div>

  <div class="col-lg-5">
    <h5><span class="mr-2">{{userProfile.Followings.length}}</span>Followings</h5>
    <br>
    {{#each userProfile.Followings}}
    <div class="mr-2">
      <a href="/users/{{this.id}}">
        <img class="img-thumbnail rounded float-left" src="{{this.image}}" width="100" alt="">
      </a>
    </div>
    {{/each}}
  </div>
</div>


<hr>
